<h2>用户列表</h2>

<table class="table table-bordered">
  <tr>
    <th>姓名</th>
    <th>邮箱</th>
    <th>所属角色</th>
    <th>操作</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td><%= user.roles_mask %></td>
      <td>
        <%= link_to '修改', edit_admin_user_path(user) %>
        <%= link_to '删除', admin_user_path(user), method: :delete, confirm: '确定?' %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to '添加', new_admin_user_path %>

