<h2><%= cookies[:project_name].to_s + "测试用例" %></h2>

<%= search_form_for @search do |f| %>
  <%= f.label :title_conf, "用例描述" %>
  <%= f.text_field :title_cont %>

  <%= f.label :feature_name_conf, "模块名称" %>
  <%= f.text_field :feature_name_cont %>

  <%= f.submit "查询" %>
<% end %>

<p>
   Download:
   <%= link_to "CSV", issues_path(format: "csv") %> |
   <%= link_to "Excel", issues_path(format: "xls") %>
</p>

<table class="table table-bordered">
  <tr>
    <th><%= sort_link @search, :feature_name, "模块" %></th>
    <th>用例编号</th>
    <th>用例描述</th>
    <th>开发负责人</th>
    <th>进度</th>
    <th>开发备注</th>
    <th>测试负责人</th>
    <th>测试情况</th>
    <th>测试备注</th>
    <th>操作</th>
    <th></th>
    <th></th>
  </tr>
<% @issues.each do |issue| %>
  <tr>
    <%= render issue %>
    <td><%= link_to '修改',edit_issue_path(issue) %></td>
    <td><%= link_to '删除',issue, method: :delete, data: { confirm: '确定？' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @issues %>
<%= link_to '添加测试用例',new_issue_path %>

<h2>Import Issues</h2>

<%= form_tag import_issues_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
